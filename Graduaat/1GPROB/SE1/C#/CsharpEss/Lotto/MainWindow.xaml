<Window x:Class="Lotto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lotto"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label x:Name="lblLotto" Content="" Width="250" Margin="5"></Label>
            <StackPanel>
                <Button x:Name="BtnStart" Content="Start" Margin="10" Click="BtnStart_Click"></Button>
                <Button x:Name="BtnWissen" Content="Wissen" Margin="10" Click="BtnWissen_Click"></Button>
                <Button x:Name="BtnList" Content="List" Margin="10" Click="BtnList_Click"></Button>
            </StackPanel>
        </WrapPanel>
    </Grid>
</Window>
