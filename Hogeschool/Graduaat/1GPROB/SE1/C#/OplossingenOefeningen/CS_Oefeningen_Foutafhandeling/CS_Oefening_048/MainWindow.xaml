        <Label x:Name="lblGetal" Content="Geef het getal:" HorizontalAlignment="Left" Margin="34,45,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnStart2" Content="Start2" HorizontalAlignment="Left" Margin="400,77,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.265,0.562" Width="66" Click="btnStart2_Click"/>
        <Label x:Name="lblError" Content="" HorizontalAlignment="Left" Margin="41,74,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.397,0.057" Width="306"/>
        <Button x:Name="btnStartGoed" Content="Startgoed" HorizontalAlignment="Left" Margin="400,108,0,0" VerticalAlignment="Top" Width="66" Click="btnStartGoed_Click"/>
        <Button x:Name="btnOpnieuw" Content="Opnieuw" HorizontalAlignment="Left" Margin="400,142,0,0" VerticalAlignment="Top" Width="66" Click="btnOpnieuw_Click"/>
        <Button x:Name="btnSluiten" Content="Einde" HorizontalAlignment="Left" Margin="400,177,0,0" VerticalAlignment="Top" Width="66" Click="btnSluiten_Click"/>
        <Button x:Name="btnToonBeeld" Content="Toon beeld" HorizontalAlignment="Left" Margin="484,47,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.351,-0.212" Width="87" Click="btnToonBeeld_Click"/>
